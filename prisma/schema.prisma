datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSubscription {
  id                    String    @id @default(cuid())
  userId                String    @unique
  paymentCustomerId     String?   @unique @map(name: "payment_customer_id")
  paymentSubscriptionId String?   @unique @map(name: "payment_subscription_id")
  priceId               Int?      @map(name: "price_id")
  periodEnding          DateTime? @map(name: "period_ending")
}
